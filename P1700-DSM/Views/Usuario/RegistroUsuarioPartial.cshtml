@model Models.Dtos.Usuario.UsuarioDto

<form id="frmUsuario" class="needs-validation" novalidate>
    <input asp-for="@Model.IdUsuario" type="hidden" class="form-control" />
    <div class="row">
        <div class="col-md-4 col-sm-12 mt-2">
            <label asp-for="@Model.Nombre"></label>
            <input asp-for="@Model.Nombre" type="text" class="form-control" placeholder="Nombre" required autocomplete="off"/>
            <div class="invalid-feedback">
                Digite el nombre de empresa
            </div>
        </div>
        <div class="col-md-4 col-sm-12 mt-2">
            <label asp-for="@Model.Apellido1"></label>
            <input asp-for="@Model.Apellido1" type="text" class="form-control" placeholder="Primer apellido" required autocomplete="off" />
            <div class="invalid-feedback">
                Digite el primer apellido
            </div>
        </div>
        <div class="col-md-4 col-sm-12 mt-2">
            <label asp-for="@Model.Apellido2"></label>
            <input asp-for="@Model.Apellido2" type="text" class="form-control" placeholder="Segundo Apellido" required autocomplete="off" />
            <div class="invalid-feedback">
                Digite el segundo apellido
            </div>
        </div>
        <div class="col-md-4 col-sm-12 mt-2">
            <label asp-for="@Model.Identificacion"></label>
            <input asp-for="@Model.Identificacion" type="text" class="form-control" placeholder="Número de indentificación" required autocomplete="off" />
            <div class="invalid-feedback">
                Digite la identificación de empresa
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-sm-12 mt-2">
            <label asp-for="@Model.Correo"></label>
            <input asp-for="@Model.Correo" type="email" class="form-control" placeholder="Correo" required autocomplete="off" />
            <div class="invalid-feedback">
                Digite el correo
            </div>
        </div>
        <div class="col-md-4 col-sm-12 mt-2">
            <label asp-for="@Model.Contrasenna"></label>
            <input asp-for="@Model.Contrasenna" type="password" class="form-control" placeholder="Contraseña" required autocomplete="off" />
            <div class="invalid-feedback">
                Digite la contraseña
            </div>
        </div>
        <div class="col-md-4 col-sm-12 mt-2">
            <label asp-for="@Model.RepetirContrasenna"></label>
            <input asp-for="@Model.RepetirContrasenna" type="password" class="form-control" placeholder="Contraseña" required autocomplete="off" />
            <div class="invalid-feedback">
                Digite la contraseña
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-2">
            <label asp-for="@Model.IdTienda"></label>
            <select asp-for="@Model.IdTienda" asp-items="@Model.LstTiendasSelect" class="form-control shadow-sm" required autocomplete="off">
            </select>
            <div class="invalid-feedback">
                Seleccione la tienda
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 mt-2">
            <label asp-for="@Model.IdPerfil"></label>
            <select asp-for="@Model.IdPerfil" asp-items="@Model.LstPerfilesSelect" class="form-control shadow-sm" required autocomplete="off">
            </select>
            <div class="invalid-feedback">
                Seleccione el perfil
            </div>
        </div>
    </div>
    <div class="row">
       
    </div>
    <div class="row mt-3">
        <div class="d-grid gap-2 col-3 mx-auto">
            <button class="btn shadow-sm btn-success" type="submit"><i class="bi bi-check-square"></i> Registrarse</button>
        </div>
    </div>
</form>

<script>
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    } else {
                        event.preventDefault(); // Prevenir el submit por defecto
                        RegistrarUsuario();
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })();
</script>
