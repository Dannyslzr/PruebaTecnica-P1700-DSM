@model Models.Dtos.Usuario.InicioSesionDto
@{
    ViewData["Title"] = "Inicio de sesión";
    Layout = "_LayoutLogin";
}

<div id="loader-overlay" class="loader-overlay" style="display: none;">
    <div class="loader"></div>
</div>

<div class="d-flex justify-content-center align-items-center vh-100 ">
    <div class="card" style="width: 35%;">
        <div class="row align-items-center text-center">
            <div class="card-body m-2">
                <h5 class="mb-3 f-w-400">Ingresa tus credenciales</h5>
                <div class="row">

                <form id="frmLogin" asp-controller="Usuario" asp-action="IniciarSesion" method="post" class="needs-validation" novalidate>
                    <div class="col-lg-12 col-md-12 col-sm-12 mt-2">

                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-person"></i></span>
                            <input asp-for="@Model.Correo" type="email" class="form-control" placeholder="Correo" aria-label="Correo" aria-describedby="basic-addon1" required>
                            <div class="invalid-feedback">
                                Ingrese el usuario
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 mt-2">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-key"></i></span>
                            <input asp-for="@Model.Contrasena" type="password" class="form-control" placeholder="Contraseña" aria-label="Contraseña" aria-describedby="basic-addon1" required>
                            <div class="invalid-feedback">
                                Ingrese la contraseña
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-block btn-primary mb-4" type="submit">Ingresar</button>
                    <button class="btn btn-block btn-secondary mb-4" type="button" onclick="NuevoUsuario()">Registrarse</button>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="partialModal" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registro de usuario</h5>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer justify-content-center">
                <div class="d-grid gap-2 col-2 mx-auto">
                    <button type="button" class="btn btn-secondary btn-block" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>

